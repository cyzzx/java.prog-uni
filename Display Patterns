import java.util.Scanner;

public class displayPatterns 
{
  public static void displayPattern(int n)
	{
		for(int i = 1; i <= n; i++)
		{
			for(int j = 1; j <= n - i; j++)
			{
				System.out.print(" ");
			}
			
			for(int k = i; k >= 1; k--)
			{
				System.out.print(k);
			}
			
			System.out.println();
		}
	}
  
	public static void main(String[] args)
	{
		Scanner input = new Scanner(System.in);
		System.out.println("Enter the number to display pattern: ");
		int n = input.nextInt();
		displayPattern(n);
		
		input.close();
		
	}
	
	
}
